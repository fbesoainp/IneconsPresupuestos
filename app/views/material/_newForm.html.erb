<%= form_with(model: @material, method: :post, local: true) do |form| %>
    <div class="form-group">
        <%=form.label :Codigo, :class => "control-label"%>
        
            <%=form.text_field :code, :class => "form-control"%>
    </div>

    <div class="form-group">
        <%=form.label :Nombre, :class => "control-label"%>
        
            <%=form.text_field :name, :class => "form-control"%>
    </div>

    <div class="form-group">
        <%=form.label :Unidad, :class => "control-label"%>
        
            <%=form.text_field :unity, :class => "form-control"%>
    </div>

    <div class="form-group">
        <%=form.label :Descripcion, :class => "control-label"%>
        
            <%=form.text_field :description, :class => "form-control"%>
    </div>

    <div class="form-group">
        <%=form.label :Precio, :class => "control-label"%>
        
            <%=form.number_field :price, step: :any, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%=form.label :Categoria, :class => "control-label"%>
        
            <%=form.select(:category, options_for_select(@categories),{}, {:class => "form-control"}) %>
    </div>

    <div class="modal-footer">
        <input type="submit" name="" value="Registrar" class="btn btn-primary">
    </div>
<% end %>




